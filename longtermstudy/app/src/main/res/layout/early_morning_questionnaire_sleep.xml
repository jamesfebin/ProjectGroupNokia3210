<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/daily_sleep_q1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Spinner
                android:id="@+id/early_morning_q1_hour"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:entries="@array/hour_options"/>

            <Spinner
                android:id="@+id/early_morning_q1_minute"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:entries="@array/minute_options"/>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/daily_sleep_q2" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Spinner
                android:id="@+id/early_morning_q2_hour"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:entries="@array/hour_options"/>

            <Spinner
                android:id="@+id/early_morning_q2_minute"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:entries="@array/minute_options"/>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/daily_sleep_q3" />

        <RadioGroup
            android:id="@+id/early_morning_q3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/early_morning_q3_yes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Yes" />

            <RadioButton
                android:id="@+id/early_morning_q3_no"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="No" />
        </RadioGroup>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/daily_sleep_q4" />

        <RadioGroup
            android:id="@+id/early_morning_q4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/early_morning_q4_option1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Very good" />

            <RadioButton
                android:id="@+id/early_morning_q4_option2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Good" />

            <RadioButton
                android:id="@+id/early_morning_q4_option3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Average" />

            <RadioButton
                android:id="@+id/early_morning_q4_option4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Poor" />

            <RadioButton
                android:id="@+id/early_morning_q4_option5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Very poor" />
        </RadioGroup>
    </LinearLayout>
</ScrollView>